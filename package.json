{
  "name": "natural-language-trading-tu",
  "version": "1.1.0",
  "description": "A natural language trading application with web interface, CLI, multi-LLM support, and advanced research capabilities",
  "main": "dist/index.js",
  "bin": {
    "nltrade": "dist/cli/optimized-trading-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/index.js",
    "start:server": "node dist/server.js",
    "start:cli": "node dist/cli/optimized-trading-cli.js",
    "start:frontend": "cd frontend && npm run dev",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:server": "nodemon --exec ts-node src/server.ts",
    "dev:cli": "nodemon --exec ts-node src/cli/optimized-trading-cli.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "demo:llm": "ts-node src/examples/llm-provider-example.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist && cd frontend && rm -rf dist"
  },
  "keywords": [
    "trading",
    "cli",
    "natural-language",
    "stocks",
    "alpaca",
    "web",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.1.3",
    "@anthropic-ai/sdk": "^0.57.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.8.2",
    "node-fetch": "^2.7.0",
    "openai": "^5.10.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.1.0",
    "@types/node-fetch": "^2.6.13",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
